    <groupId>org.xito</groupId>
    <artifactId>parent-pom</artifactId>
    <version>2.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <properties>
        <assemblyLocation>${basedir}/service-assembly.xml</assemblyLocation>
    </properties>

    <modules>
        <module>about</module>
